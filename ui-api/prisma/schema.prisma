generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Student {
  fullname    String
  studentCode String
  email       String       @unique
  password    String?
  experiments Experiment[]
}

model Experiment {
  id                 Int             @id @default(autoincrement())
  name               String
  experimentDatetime DateTime        @default(now())
  student            Student?        @relation(fields: [studentEmail], references: [email])
  studentEmail       String?
  departmentLabs     DepartmentLab[]
  modified           DateTime        @updatedAt
}

model DepartmentLab {
  id             Int         @id @default(autoincrement())
  departmentName String
  panelangle     Int
  current        Float
  voltage        Float
  radiation      Float
  experiment     Experiment? @relation(fields: [experimentId], references: [id])
  experimentId   Int?
}

model EfficiencyTest {
  id          Int          @id @default(autoincrement())
  testRecords TestRecord[]
}

model TestRecord {
  time             DateTime        @id
  record           Int
  radiation        Float
  current          Float
  voltage          Float
  EfficiencyTest   EfficiencyTest? @relation(fields: [efficiencyTestId], references: [id])
  efficiencyTestId Int?
}
